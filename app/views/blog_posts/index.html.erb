<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-16 mx-auto text-center">
        <div class="max-w-lg mx-auto">
            <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">Blog Article</h1>
            <p class="mt-6 text-gray-500 dark:text-gray-300">The list of Blog Articles is below.</p>
        </div>
    </div>
</section>
<section class="bg-white dark:bg-gray-900">
    <% @blog_posts.each do |blog_post| %>
        <div class="container m-auto max-w-7xl px-6 text-gray-600 md:px-12 xl:px-6">
            <div class="m-auto max-w-6xl px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800 mb-8">
                <div class="flex items-center justify-between">
                    <span class="text-sm font-light text-gray-600 dark:text-gray-400">Mar 10, 2019</span>
                    <% if blog_post.draft? %>
                        
                        <div class="px-3 py-1 text-sm font-bold text-gray-100 transition-colors duration-300 transform bg-gray-600 rounded cursor-pointer hover:bg-gray-500 flex" tabindex="0" role="button">
                            <div class="mr-3">Draft</div>
                            <div>
                                <span class="relative flex h-3 w-3">
                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-3 w-3 bg-sky-500"></span>
                                </span>
                            </div>
                        </div>
                    <% elsif blog_post.scheduled? %>
                        <div class="px-3 py-1 text-sm font-bold text-gray-100 transition-colors duration-300 transform bg-gray-600 rounded cursor-pointer hover:bg-gray-500" tabindex="0" role="button">Scheduled</div>
                    <% end %>
                </div>
                <div class="mt-2">
                    <div class="text-xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline" tabindex="0" role="link"><%= link_to blog_post.title, blog_post %></div>
                    <p class="mt-2 text-gray-600 dark:text-gray-300"><%= blog_post.content %></p>
                </div>
                <div class="flex items-center justify-between mt-4">
                    <a href="#" class="text-blue-600 dark:text-blue-400 hover:underline" tabindex="0" role="link">Read more</a>
                    <div class="flex items-center">
                        <img class="hidden object-cover w-10 h-10 mx-4 rounded-full sm:block" src="https://images.unsplash.com/photo-1502980426475-b83966705988?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=40&q=80" alt="avatar">
                        <a class="font-bold text-gray-700 cursor-pointer dark:text-gray-200" tabindex="0" role="link">Jean Philippe</a>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</section>