<h1>MY BLOG</h1>
<% @blog_posts.each do |blog_post| %>
    <div>
        <% if blog_post.draft? %>
            <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
        <% elsif blog_post.scheduled? %>
            <div class="p-2 rounded bg-red-100 text-red-900">Scheduled</div>
        <% end %>
        <h3><%= link_to blog_post.title, blog_post %></h3>
        <p><%= blog_post.content %></p>
    </div>

<% end %>